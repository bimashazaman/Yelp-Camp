<% layout('layouts/boilerplate') %>

<h1>Create a new campground</h1>
<form action="/campgrounds" method="POST" class="campground-form">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="campground[title]" id="title" required />
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    <input type="text" name="campground[location]" id="location" required />
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input type="number" name="campground[price]" id="price" required />
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea
      name="campground[description]"
      id="description"
      required
    ></textarea>
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    <input type="url" name="campground[image]" id="image" required />
  </div>

  <button type="submit" class="submit-btn">Submit</button>
</form>
<a href="/campgrounds" class="back-link">Back to Campgrounds</a>
